{
  "compilerOptions": {
    "strict": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "ES2015",
    "target": "es5",
    "lib": ["es2015", "dom"],
    "jsx": "react",
    "esModuleInterop": true,
    "typeRoots": ["./src/types"],
    "types": ["node"],
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@ubilabs/google-maps-react-hooks": ["./src"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
